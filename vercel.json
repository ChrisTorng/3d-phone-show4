{
    "version": 2,
    "builds": [
        {
            "src": "./index.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/index.py"
        },
        {
            "src": "/models/(.*)",
            "dest": "/index.py"
        },
        {
            "src": "/(.*\\.(js|css|ico|json))",
            "dest": "/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/index.py"
        }
    ],
    "env": {
        "PYTHONUNBUFFERED": "1"
    },
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                { "key": "X-Content-Type-Options", "value": "nosniff" },
                { "key": "X-Frame-Options", "value": "DENY" },
                { "key": "X-XSS-Protection", "value": "1; mode=block" },
                { "key": "Cache-Control", "value": "public, max-age=86400" }
            ]
        },
        {
            "source": "/models/(.*)",
            "headers": [
                { "key": "Cache-Control", "value": "public, max-age=604800" }
            ]
        }
    ]
}